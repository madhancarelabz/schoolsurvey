R2_ACCESS_KEY_ID=           # REQUIRED: R2 access key
R2_SECRET_ACCESS_KEY=       # REQUIRED: R2 secret key
R2_BUCKET_NAME=survey-log

# === VAPI ===
VAPI_PUBLIC_KEY=            # REQUIRED: Vapi public key
VAPI_PRIVATE_KEY=           # REQUIRED: Vapi private key

# === SSL ===
SSL_DOMAIN=survey.carelabs.me
