POSTGRES_DB=school_survey

# === REDIS 7 ===
REDIS_PASSWORD=             # REQUIRED: Set a strong password

# === JWT (for Voice Gateway API) ===
JWT_SECRET=survey_secret_key_2026

# === SARVAM AI (Malayalam STT + TTS) ===
SARVAM_API_KEY=             # REQUIRED: Your Sarvam AI API key

# === CLOUDFLARE R2 (Audio Storage) ===
